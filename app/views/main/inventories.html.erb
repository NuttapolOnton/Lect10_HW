<%if @inven_list != nil and @inven_list.length > 0%>
    <h>Your inventories</h>
    <table class = "table table-striped table-bordered">
        <tr>
            <td>name</td>
            <td>price</td>
            <td>seller</td>
            <td>date</td>
        </tr>
    <%@inven_list.each do |i|%>
        <tr>
            <td><%=Item.where(id: i.item_id).first.name%></td>
            <td><%=i.price%></td>
            <td><%=User.where(id: (Item.where(id: i.item_id).first.user_id)).first.name%></td>
            <td><%=i.timestamp.to_s%></td>
        </tr>
        
    <%end%>
<%else%>
    <p>No inventory</p>
<%end%>